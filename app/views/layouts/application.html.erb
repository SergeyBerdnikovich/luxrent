<!DOCTYPE html>
<html lang="en">
  <head>
    <%= display_meta_tags :site => "luxauto.by",
                                             :title => show_("seo title"),
                                             :reverse => true,
                                             :description => show_("meta description"),
                                             :keywords => show_("meta keywords") %>
      <meta charset="utf-8" />
      <%= stylesheet_link_tag    "application", :media => "all" %>
      <%#= javascript_include_tag "application" %>
      <%= javascript_include_tag "jquery.min" %>
      <%= javascript_include_tag "theme" %>
      <%= javascript_include_tag "jquery.vegas" %>
      <%= javascript_include_tag "bootstrap.min" %>
      <%= javascript_include_tag "jquery.flexslider-min" %>
      <%#= javascript_include_tag "crossroads.min" %>
      <%= javascript_include_tag "signals.min" %>
      <%= javascript_include_tag "hasher.min" %>
      <script type="text/javascript" src="/assets/crossroads.min.js"></script>
      <script type="text/javascript" src="/assets/hasher.min.js"></script>
      <script type="text/javascript" src="/assets/galleries/jquery.isotope.min.js"></script>
      <script type="text/javascript" src="/assets/galleries/jquery.prettyPhoto.js"></script>
      <script type="text/javascript" src="/assets/galleries/twitter-bootstrap-hover-dropdown.js"></script>

      <script type="text/javascript" src="/assets/slider/jquery.themepunch.plugins.min.js"></script>
      <script type="text/javascript" src="/assets/slider/jquery.themepunch.revolution.min.js"></script>
      <script type="text/javascript" src="/assets/slider/main.js"></script>
      <%#= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
      <script src="http://api-maps.yandex.ru/2.0-stable/?load=package.standard&coordorder=longlat&lang=ru-RU" type="text/javascript"></script>

      <%= csrf_meta_tags %>
      <!--[if IE 7]>
        <link href="css/font-awesome-ie7.css" rel="stylesheet">
      <![endif]-->

      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
  </head>
  <body>
    <a id="back-top" href="javascript:void(0)"><i class="icon-chevron-up"></i></a>
    <p id="language" class='visible-desktop'>
      <%= link_to 'RU', '/ru' %> /
      <%= link_to 'EN', '/en' %>
    </p>

    <!-- header -->
    <header id="header">
      <div class="container">
        <div class="row-fluid">
          <div class="span12">
            <div class="navbar">
              <div class="navbar-inner">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </a>
                <a class="brand" href="javascript:void(0)">
                  <h1 id="logo"><%== show_("project name") %></h1>
                </a>
                <%= render "layouts/menu" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- block0 -->
    <section id="block0" class="box">
      <div class="container">
        <div class="panel">
          <div class="row-fluid">
            <div class="span12">
              <hgroup id="intro" style="display: none">
                <h2><%== show_("block0 title") %></h2>
                <h3><%== show_("block0 description") %></h3>
              </hgroup>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- block1 -->
    <section id="block1" class="box">
      <div class="container">
        <div class="panel">
          <div class="row-fluid">
            <div class="span12 header">
              <hgroup>
                <h2><%== show_("block1 title") %></h2>
                <h3><%== show_("block1 description") %></h3>
              </hgroup>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12 content">
              <div class="row-fluid">
                <div class="span12 pull-center">
                  <!-- <img src="/assets/Responsive-showcase-presentation.jpg" alt="" /> -->
                  <section id="slider">
                    <%= render "layouts/slider" %>
                  </section>
                </div>
              </div>
              <hr class="line" />
              <%= render "layouts/phrases" %>
              <hr class="line" />
              <%= render "layouts/services" %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- block2 -->
    <section id="block2" class="box">
      <%= render "layouts/full_services" %>
    </section>
    <!-- separately blocks -->
    <%= render "layouts/separately_categories" %>
    <!-- galleries -->
    <section id="galleries" class="box">
      <div class="container">
        <div class="panel">
          <div class="row-fluid">
            <div class="span12 header">
              <hgroup>
                <h2><%== show_("galleries block title") %></h2>
                <h3><%== show_("galleries block description") %></h3>
              </hgroup>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12 content" style='padding:16px;'>
              <div class="container">
                <div class="row-fluid">
                  <div class="span12 text-center">
                    <div id="filter">
                      <ul>
                        <li>
                          <a href="" data-filter="*" class="selected">
                            <i class="icon icon-reorder"></i><%= t("all_photos") %>
                          </a>
                        </li>
                        <%= render "layouts/galleries_menu" %>
                      </ul>
                    </div>
                  </div>
                </div>
                <div id="content">
                  <%= render "layouts/galleries" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- contact -->
    <section id="contact" class="box">
      <div class="container">
        <div class="panel">
          <div class="row-fluid">
            <div class="span12 header">
              <hgroup>
                <h2><%== show_("contact block title") %></h2>
                <h3><%== show_("contact block description") %></h3>
              </hgroup>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12 content">
              <div class="row-fluid">
                <div class="span6">
                <!-- googlemaps -->
                  <!-- <div id="map_canvas">
                  </div> -->
                  <div id="map" style='height:290px;'>
                  </div>
                  <%#== show_("address") %>
                  <div><%= t("our_phone") %><%== show_("phone number") %></div>
                  <div class='contact_info'><%== show_('contact info') %></div>
                </div>
                <div class="span6">
                  <%= form_tag send_message_path do %>
                    <fieldset>
                      <div class="control-group">
                        <div class="controls">
                          <%= text_field_tag :full_name, '', :class => 'span12', :placeholder => t("send_msg.full_name") %>
                        </div>
                        <div class="controls">
                          <%= text_field_tag :email, '', :class => 'span12', :placeholder => t("send_msg.email") %>
                        </div>
                        <div class="controls">
                          <%= text_field_tag :subject, '', :class => 'span12', :placeholder => t("send_msg.subject") %>
                        </div>
                        <div class="controls">
                          <%= text_area_tag :message, '', :class => 'span12', :placeholder => t("send_msg.message"), :rows => 6 %>
                        </div>
                        <%= submit_tag t("send_message"), :class => 'lux_btn2' %>
                      </div>
                    </fieldset>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- ligthbox -->
    <div style="display: none;" id="lightbox"><img id="bigimg" src="" /></div>
  </body>
  <script type="text/javascript">
  $(document).ready(function(){
    var price = "<%= t 'price_btn' %>";
    var price_hide = "<%= t 'price_btn_hide' %>";
    $('.hide_data_btn').click(function(){
      if($(this).html()==price){
        $(this).html(price_hide);
      }
      else{
        $(this).html(price);
      }
      $(this).toggleClass('up-arrow');
      $("div#"+this.id).slideToggle("slow");
    });
  });
  $(function() {
    var address = "<%== show_('address') %>"
    var projet_name = "<%== show_('project name') %>"
    var phone_number = "<%== show_('phone number') %>"
    var latlng

    $.getJSON("http://geocode-maps.yandex.ru/1.x/?format=json&geocode=" + address + "&results=1", function(json){
      latlng = json.response.GeoObjectCollection.featureMember[0].GeoObject.Point.pos.split(/\s/);
      ymaps.ready(init);
      var myMap;

      function init(){
          myMap = new ymaps.Map ("map", {
              center: latlng,
              zoom: 15,
          });

          myPlacemark = new ymaps.Placemark(latlng, {
            content: phone_number,
            balloonContent: projet_name,
          });

          myMap.geoObjects.add(myPlacemark);
          myMap.controls.add('typeSelector');
          myMap.controls.add('zoomControl');
      }
    });
  });

  $.vegas('slideshow',
    {
        delay: 10000,
        backgrounds: [
          <% @bg_galleries.each do |gallery| %>
             { src: '<%= gallery.photo.url %>', fade: 2000 },
          <% end %>
        ]
    })('overlay');
  </script>
  <%= render "layouts/google_analytics" %>
  <%= yield :scripts %>
</html>